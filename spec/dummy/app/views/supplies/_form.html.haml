= form_for @supply do |f|
  - if @supply.errors.any?
    #error_explanation
      %h2= "#{pluralize(@supply.errors.count, "error")} prohibited this supply from being saved:"
      %ul
        - @supply.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :source
    = f.text_field :source
  .actions
    = f.submit 'Save'
