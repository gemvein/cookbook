= form_for @ingredient do |f|
  - if @ingredient.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ingredient.errors.count, "error")} prohibited this ingredient from being saved:"
      %ul
        - @ingredient.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :aisle
    = f.text_field :aisle
  .field
    = f.label :store
    = f.text_field :store
  .field
    = f.label :cost
    = f.text_field :cost
  .actions
    = f.submit 'Save'
