= form_for @tool do |f|
  - if @tool.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tool.errors.count, "error")} prohibited this tool from being saved:"
      %ul
        - @tool.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :composition
    = f.text_field :composition
  .actions
    = f.submit 'Save'
